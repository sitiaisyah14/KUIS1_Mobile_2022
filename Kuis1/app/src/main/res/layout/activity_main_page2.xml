<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_page2"
    android:background="@drawable/frame1">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KPRIUB Pay"
        android:textColor="@color/white"
        android:textSize="9pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />



    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="131dp"
        android:layout_height="49dp"
        android:background="@android:color/transparent"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="9pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:src="@drawable/profile3">
            </ImageView>


            <TextView
                android:id="@+id/namalengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SITI AISYAH S.Tr.Kom"
                android:textColor="@color/grey"
                android:textSize="10pt"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/nim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Anggota : 2041720061"
                android:textColor="@color/grey"
                android:textSize="7pt"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/nik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NIK : 3514095401020001"
                android:textColor="@color/grey2"
                android:textSize="7pt"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/jti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JTI - POLINEMA"
                android:textColor="@color/grey2"
                android:textSize="7pt"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/pns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PNS"
                android:textColor="@color/grey2"
                android:textSize="7pt"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Tabungan"
                        android:layout_marginLeft="15dp"
                        android:textSize="5pt"
                        android:textStyle="bold">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.30.000,00"
                        android:layout_marginLeft="170dp"
                        android:textSize="6pt"
                        android:textStyle="bold">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/bukutabungan"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/kartutabungan"></ImageButton>

                    <ImageButton
                        android:id="@+id/kartubelanja"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/kartubelanja"></ImageButton>

                    <ImageButton
                        android:id="@+id/historybelanja"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/historybelanja"></ImageButton>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="5dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/rekapsimpanan2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/rekapsimpanan"
                        android:backgroundTint="@color/white"
                        ></ImageButton>
                    <ImageButton
                        android:id="@+id/rekappinjaman2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/rekappinjaman"
                        android:backgroundTint="@color/white"
                        ></ImageButton>
                    <ImageButton
                        android:id="@+id/rekapshu2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/rekapshu"
                        android:backgroundTint="@color/white"
                        ></ImageButton>
                    <ImageButton
                        android:id="@+id/infopay"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/info"
                        android:backgroundTint="@color/white"
                        ></ImageButton>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promo saat ini"
                android:layout_marginLeft="15dp"
                android:textSize="8pt"
                android:textStyle="bold"
                >
            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <com.denzcoskun.imageslider.ImageSlider
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                        app:iss_period="1000"
                        app:iss_auto_cycle="true"
                        app:iss_delay="1000"
                        app:iss_corner_radius="10"
                        app:iss_title_background="@drawable/gradient"
                        android:id="@+id/imageSlider"
                        >
                    </com.denzcoskun.imageslider.ImageSlider>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>